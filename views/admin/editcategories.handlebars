    <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}

<h3>Editar Categoria:</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/categories/edit" method="POST">
            <input type="hidden" name="id" value="{{categorie._id}}">
            <label for="nome">Nome:</label>
            <input type="text" name="nome" placeholder="Nome da categoria" class="form-control" value="{{categorie.nome}}" >

            <label for="slug">Slug:</label>
            <input type="text" name="slug" class="form-control" value="{{categorie.slug}}" >

        <button type="submit" class="btn btn-success mt-2">Editar Categoria</button>
        </form>
    </div>
</div>